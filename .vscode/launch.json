  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start",
      "type": "node",
      "request": "launch",
      "restart": true,
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "dev"],
      "port": 18764,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    },
    {
      "name": "Test",
      "type": "node",
      "request": "launch",
      "restart": true,
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "--config=jest.json"],
      "console": "integratedTerminal",
      "disableOptimisticBPs": true,
      "internalConsoleOptions": "neverOpen",
      "protocol": "inspector"
    }
  ]
}
